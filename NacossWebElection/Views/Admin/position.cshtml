@model NacossWebElection.Models.ViewModels.positions
@{
    ViewBag.Title = "position";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>position</h2>
<div class="row">
    <div class="col-md-6">

        <div class="form-default">
            @using (Html.BeginForm("position", "admin", new { @id = string.Empty }, FormMethod.Post, new { id = "form1" }))
            {
                @Html.AntiForgeryToken()

                <h4>Add position</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.position, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.position, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.position, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                 
                        <button type="submit" class="btn btn-primary" > <i class="fa fa-group"></i>  Add Position</button>
                 
                </div>

            }
        </div>

    </div>
    <div class="col-md-6">
       @Html.Action("Positions")
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script src="~/Scripts/AppScripts/Positions.js"></script>
}
